---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.name | xml_escape }} - EN</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/flux.xml" rel="self" type="application/rss+xml" />
        {% assign posts=site.posts | where:"lang", "en" | where:"type", posts %}
		{% for post in posts limit:15 %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				{% if post.author.name %}
					<dc:creator>{{ post.author.name | xml_escape }}</dc:creator>
				{% endif %}
                    <description>{{ post.content | xml_escape }}</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y" }} {{ post.exacttime }} {{ post.date | date: "%z" }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
